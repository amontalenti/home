#!/bin/bash
echo "duplicity: / => root..."
sudo duplicity \
    --no-encryption \
    --no-compression \
    --exclude=/dev \
    --exclude=/mnt \
    --exclude=/media \
    --exclude=/sys \
    --exclude=/home \
    --exclude=/lost+found \
    --exclude=/proc \
    / \
    file:///media/am/ext/tx220/root;
echo "Done."
echo "duplicity: /home/pixelmonkey..."
sudo duplicity \
    --no-encryption \
    --no-compression \
    /home/pixelmonkey file:///media/am/ext/tx220/pixelmonkey;
echo "Done."
echo "duplicity: /home/am..."
sudo duplicity \
    --no-encryption \
    --no-compression \
    /home/am file:///media/am/ext/tx220/am;
echo "Done."
