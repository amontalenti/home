#!/bin/bash
echo "duplicity: / => root..."
sudo duplicity \
    --no-encryption \
    --exclude=/dev \
    --exclude=/mnt \
    --exclude=/media \
    --exclude=/sys \
    --exclude=/home \
    --exclude=/lost+found \
    --exclude=/proc \
    / \
    file:///media/am/ext/tx220-xenial/root;
echo "Done."
echo "duplicity: /home/crashplan..."
sudo duplicity \
    --no-encryption \
    /home/crashplan file:///media/am/ext/tx220-xenial/crashplan;
echo "Done."
echo "duplicity: /home/essentials..."
sudo duplicity \
    --no-encryption \
    /home/essentials file:///media/am/ext/tx220-xenial/essentials;
echo "Done."
echo "duplicity: /home/am..."
sudo duplicity \
    --no-encryption \
    /home/am file:///media/am/ext/tx220-xenial/am;
echo "Done."
